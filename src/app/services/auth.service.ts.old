// src/app/services/auth.service.ts
import { Injectable } from '@angular/core';
import { Router } from '@angular/router';
import { BehaviorSubject, Observable } from 'rxjs';

export type Role = 'ADMIN' | 'FACULTY' | 'SCHOLAR';

export interface User {
  id: string;
  name: string;
  roles: Role[];
  // other fields...
}

@Injectable({
  providedIn: 'root'
})
export class AuthService {
  private currentUserSubject = new BehaviorSubject<User | null>(null);

  // Observable for components to subscribe
  currentUser$: Observable<User | null> = this.currentUserSubject.asObservable();
  autoLogoutTimer: any;
  constructor(private router: Router) {
    // Optionally: load persisted user from localStorage/session
    const savedUser  = localStorage.getItem('currentUser');
    const savedToken = localStorage.getItem('token');
    if (savedUser ) {
      try{
      this.currentUserSubject.next(JSON.parse(savedUser ));
      }catch{
        localStorage.removeItem('currentUser');
      }
    }
// schedule auto logout if token exists
    if (savedToken) {
      const exp = this.getTokenExpiration(savedToken);
      const msUntilExpiry = exp - Date.now();
      if (msUntilExpiry <= 0) {
        // token already expired
        this.logout('token-expired');
      } else {
        this.scheduleAutoLogout(msUntilExpiry);
      }
    }

     this.currentUser$.subscribe(user => {
      console.log('currentUser changed:', user);
    });
  }

  // Simple login simulator - replace with real API call
  loginAs(user: User,token:string) {
    this.currentUserSubject.next(user);
    localStorage.setItem('currentUser', JSON.stringify(user));
     if (token) {
      localStorage.setItem('token', token);
      const exp = this.getTokenExpiration(token);
      const msUntilExpiry = exp - Date.now();
      if (msUntilExpiry <= 0) {
        // immediate logout if token invalid/expired
        this.logout('token-expired');
      } else {  
        this.scheduleAutoLogout(msUntilExpiry);
      }
    }
  }

 logout(reason?: string) {
  // Remove JWT tokens or session data
  localStorage.removeItem('token');
  localStorage.removeItem('currentUser');  // if you store user info
  
  // Clear BehaviorSubject
  this.currentUserSubject.next(null);

  // Optional: cancel auto-logout timer
  if (this.autoLogoutTimer) {
    clearTimeout(this.autoLogoutTimer);
    this.autoLogoutTimer = null;
  }

  // Navigate to login page
  this.router.navigate(['/login'], {
    queryParams: { reason }
  });
}

scheduleAutoLogout(expirationMs: number) {
  if (this.autoLogoutTimer) {
    clearTimeout(this.autoLogoutTimer);
  }

  this.autoLogoutTimer = setTimeout(() => {
    this.logout('token-expired');
  }, expirationMs);
}

  get currentUser(): User | null {
    return this.currentUserSubject.value;
  }

  hasRole(...roles: Role[]): boolean {
    const user = this.currentUser;
    if (!user) return false;
    return roles.some(r => user.roles.includes(r));
  }
getTokenExpiration(token: string): number {
   debugger;
    const payload = JSON.parse(atob(token.split('.')[1]));
    return payload.exp * 1000;
  }

}
